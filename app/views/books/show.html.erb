<%= render 'books/list', user:@user, book:@book_new %>
<p><%= flash[:notice] %></p>
         <div class="col-md-9">
          <h1>Book detail</h1>
           <table class="table">
             <tr>
              <td><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60,class: "img-square profile-thumb", format: 'jpeg', fallback: "no_image.jpg" %><br>
                <%= link_to @book.user.name, user_path(@book.user.id)  %>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <% if @book.user_id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete %></td>
              <% else %>

              <% end %>


              
            

            </tr>
        </table>
      </div>