<%= render 'books/list', user:@user, book:@book %>
<%= render "devise/shared/error_messages", resource: @book %>

              <h1>Books</h1>
               <table class="table">
                <tr>
                 <th>Title</th>
                 <th>Opinion</th>
                </tr>


             <% @books.each do |post| %>
              <tr>
              <td><%= link_to user_path(post.user) do %>
                <% attachment_image_tag post.user, :profile_image, :fill, 60, 60,class: "img-square profile-thumb", format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %>
              </td>
              <td><%= link_to post.title, book_path(post.id) %></td>
              <td><%= post.body %></td>
              </tr>
              <% end %>
             </table>

        </div>
    </div>
</div>

